{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "swagger-config.ts"],
  "exclude": ["node_modules", "dist"]
}
